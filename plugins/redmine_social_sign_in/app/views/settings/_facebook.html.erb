<h3><%= l(:label_facebook) %></h3>
<p>
  <%= label_tag('settings_facebook_enabled', l(:enable, scope: [:redmine_social_sign_in])) %>
  <%= check_box_tag('settings[facebook_enabled]', '1', @settings['facebook_enabled'] == '1') %>
</p>

<p>
  <%= label_tag('settings_facebook_app_id', l(:app_id, scope: [:redmine_social_sign_in])) %>
  <%= text_field_tag 'settings[facebook_app_id]', @settings['facebook_app_id'] %>
</p>

<p>
  <%= label_tag('settings_facebook_app_secret', l(:app_secret, scope: [:redmine_social_sign_in])) %>
  <%= text_field_tag 'settings[facebook_app_secret]', @settings['facebook_app_secret'] %>
</p>

